<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base application theme. -->
    <style name="AppThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
    </style>


    <style name="EditRecordActivityStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="AppTheme" parent="AppBaseTheme">

        <!--<item name="md_medium_font">LatoLatin-Light.ttf</item>-->
        <!--<item name="md_regular_font">LatoLatin-Light.ttf</item>-->
        <!--<item name="md_dark_theme">false</item>-->

        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:windowTranslucentStatus" tools:targetApi="21">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/theme_main_color</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Toolbar Theme / Apply white arrow -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionBarTheme">@style/AppTheme.ActionBarTheme</item>

        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/theme_main_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/main_bg</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="21">true</item>
        <item name="toolbarStyle">@style/Toolbar</item>

    </style>

    <!--<style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">-->
    <!--&lt;!&ndash; White arrow &ndash;&gt;-->
    <!--<item name="colorControlNormal">@android:color/white</item>-->
    <!--</style>-->


    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/theme_main_color</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <item name="spinBars">true</item>
    </style>

    <style name="AppTheme.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- White arrow -->
        <item name="colorControlNormal">@android:color/white</item>
    </style>


    <style name="MyEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textSize">@dimen/main_font_l</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:textColorHint">@color/main_text_hint_gray</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingLeft">20.0dip</item>
        <item name="android:paddingTop">10.0dip</item>
        <item name="android:paddingRight">20.0dip</item>
        <item name="android:paddingBottom">10.0dip</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
    </style>



    <style name="MyBlueBtnStyle">
        <item name="rv_cornerRadius">4dp</item>
        <item name="rv_textPressColor">@color/white_pressed</item>
        <item name="rv_isRippleEnable">true</item>
        <item name="rv_backgroundColor">@color/blue</item>
        <item name="rv_backgroundPressColor">@color/blue_pressed</item>
        <item name="android:textSize">@dimen/font_size_46</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="MyWhiteBtnStyle">
        <item name="rv_cornerRadius">4dp</item>
        <item name="rv_isRippleEnable">true</item>
        <item name="rv_backgroundColor">@color/white</item>
        <item name="rv_strokeColor">@color/blue</item>
        <item name="rv_strokePressColor">@color/blue_pressed</item>
        <item name="rv_strokeWidth">1dp</item>
        <item name="android:textSize">@dimen/font_size_46</item>
        <item name="android:textColor">@color/main_text_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="SPB" parent="@android:style/Widget.ProgressBar.Horizontal" />
    <style name="SmoothProgressBar" parent="@style/SPB">
        <item name="spb_color">@color/spb_default_color</item>
        <item name="spb_stroke_width">@dimen/spb_default_stroke_width</item>
        <item name="spb_stroke_separator_length">@dimen/spb_default_stroke_separator_length</item>
        <item name="spb_sections_count">@integer/spb_default_sections_count</item>
        <item name="spb_speed">@string/spb_default_speed</item>
        <item name="spb_interpolator">@integer/spb_default_interpolator</item>
        <item name="spb_reversed">@bool/spb_default_reversed</item>
        <item name="spb_mirror_mode">@bool/spb_default_mirror_mode</item>
    </style>
    <style name="GradientProgressBar" parent="@style/SmoothProgressBar">
        <item name="android:interpolator">@android:anim/decelerate_interpolator</item>
        <item name="spb_stroke_separator_length">0.0dip</item>
        <item name="spb_sections_count">3</item>
        <item name="spb_speed">1.7</item>
        <item name="spb_colors">@array/gplus_colors</item>
        <item name="spb_gradients">true</item>
    </style>
</resources>
