<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@id/topbar"
        android:background="@color/blue"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/toolbar_height">
        <ImageView
            android:id="@+id/iv_close"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/screen_margin"
            android:layout_marginRight="@dimen/screen_margin"
            android:src="@drawable/img_close_white"
            android:layout_centerVertical="true"
            android:onClick="onClick" />
        <sm.xue.view.MyET
            android:textSize="@dimen/font_size_36"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:id="@id/input_edittext"
            android:background="@drawable/bg_corner_t_white"
            android:paddingLeft="8.0dip"
            android:layout_width="fill_parent"
            android:layout_height="27.0dip"
            android:layout_marginRight="@dimen/screen_margin"
            android:hint="搜索活动、地点、用户"
            android:singleLine="true"
            android:drawableLeft="@drawable/img_search_small"
            android:drawablePadding="5.0dip"
            android:layout_toLeftOf="@id/message_imageview"
            android:layout_toRightOf="@id/close_imageview"
            android:layout_centerVertical="true"
            android:imeOptions="actionSearch" />
        <ImageView
            android:id="@+id/tv_message"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/screen_margin"
            android:src="@drawable/img_message_new"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="onClick" />
        <com.qmusic.controls.graphy.CircleImageView
            android:id="@id/unread_imageview"
            android:visibility="gone"
            android:layout_width="@dimen/point_size"
            android:layout_height="@dimen/point_size"
            android:src="#ffff0000"
            android:layout_alignTop="@id/message_imageview"
            android:layout_alignRight="@id/message_imageview" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/topbar">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@id/center_view"
                android:layout_width="20.0dip"
                android:layout_height="1.0dip"
                android:layout_centerInParent="true" />
            <sm.xue.view.MyTV
                android:textSize="@dimen/font_size_46"
                android:textColor="@color/text_yellow"
                android:gravity="center"
                android:id="@id/week_textview"
                android:background="@drawable/img_bg_classify_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dip"
                android:layout_marginTop="20.0dip"
                android:text="本周末"
                android:layout_toLeftOf="@id/center_view" />
            <sm.xue.view.MyTV
                android:textSize="@dimen/font_size_46"
                android:textColor="@color/text_blue"
                android:gravity="center"
                android:id="@id/near_textview"
                android:background="@drawable/img_bg_classify_yellow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="20.0dip"
                android:text="活动地图"
                android:layout_toRightOf="@id/center_view" />
            <RelativeLayout
                android:id="@id/hot_tag_layout"
                android:background="@color/t"
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:layout_marginLeft="@dimen/screen_margin"
                android:layout_marginTop="30.0dip"
                android:layout_marginRight="@dimen/screen_margin"
                android:layout_below="@id/week_textview">
                <View
                    android:id="@+id/hot_line"
                    android:background="@color/blue"
                    android:layout_width="@dimen/line_height"
                    android:layout_height="fill_parent" />
                <sm.xue.view.MyTV
                    android:textSize="@dimen/font_size_46"
                    android:textColor="@color/text_black"
                    android:id="@id/hot_tag_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="热门搜索"
                    android:layout_toRightOf="@id/line"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
            <sm.xue.view.MyGridView
                android:id="@id/hot_tag_gridview"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30.0dip"
                android:layout_marginTop="20.0dip"
                android:layout_marginRight="30.0dip"
                android:listSelector="#00000000"
                android:cacheColorHint="#00000000"
                android:horizontalSpacing="30.0dip"
                android:verticalSpacing="15.0dip"
                android:numColumns="3"
                android:layout_below="@id/hot_tag_layout" />
            <RelativeLayout
                android:id="@id/classify_tag_layout"
                android:background="@color/t"
                android:layout_width="fill_parent"
                android:layout_height="20.0dip"
                android:layout_marginLeft="@dimen/screen_margin"
                android:layout_marginTop="30.0dip"
                android:layout_marginRight="@dimen/screen_margin"
                android:layout_below="@id/hot_tag_gridview">
                <View
                    android:id="@+id/classify_line"
                    android:background="@color/blue"
                    android:layout_width="@dimen/line_height_l"
                    android:layout_height="fill_parent" />
                <sm.xue.view.MyTV android:textSize="@dimen/font_size_46" android:textColor="@color/text_black" android:id="@id/classify_tag_textview" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10.0dip" android:text="分类搜索" android:layout_toRightOf="@id/line" android:layout_centerVertical="true" />
            </RelativeLayout>
            <sm.xue.view.MyGridView android:id="@id/classify_tag_gridview" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="30.0dip" android:layout_marginTop="20.0dip" android:layout_marginRight="30.0dip" android:listSelector="#00000000" android:cacheColorHint="#00000000" android:horizontalSpacing="30.0dip" android:verticalSpacing="15.0dip" android:numColumns="3" android:layout_below="@id/classify_tag_layout" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>